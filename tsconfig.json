{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "@/*": [
                "./client/src/*"
            ],
            "@db/*": [
                "./db/*"
            ],
            "@shared/*": [
                "./shared/*"
            ]
        }
    },
    "include": [
        "client/src",
        "server",
        "shared",
        "db"
    ]
}